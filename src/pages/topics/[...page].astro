---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import * as data from '../../lib/dataHelpers'
import createSlug from "../../lib/createSlug";
import TopicsHeader from "@components/topics/TopicsHeader.astro";

export const topics = await data.Topics.getTopicsSortedByDate();
export async function getStaticPaths({ paginate }) {
  return paginate(topics, { pageSize: 10 });
}

const { page } = Astro.props;
---

<BaseLayout title="Topics" sideBarActiveItemID="topics">
  <div class="w-full max-w-none px-4 sm:px-6 lg:px-8">
    <TopicsHeader data={topics} title="Topics (Full List)" showTopicsTags/>

    {
      page.data.length === 0 ? (
        <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-w-full">
          <p class="font-bold">Sorry!</p>
          <p>There are no topics to show at the moment. Check back later!</p>
        </div>
      ) : (
        <ul>
          {page.data.map((pageItem) => {
            const image = pageItem.data.heroImage ? pageItem.data.heroImage : `/topics.png`;
            return <>
              <HorizontalCard
                title={pageItem.data.title}
                img={image}
                desc={pageItem.data.description}
                url={"/topics/" + createSlug(pageItem.data.title, pageItem.slug)}
                target="_self"
                badge={pageItem.data.badge}
                tags={pageItem.data.tags}
              />
              <div class="divider my-0" />
            </>
          })}
        </ul>
      )
    }

    <div class="flex justify-between">
      {
        page.url.prev ? (
          <a href={page.url.prev} class="btn btn-ghost my-10 mx-5">
            {" "}
            <svg
              class="h-6 w-6 fill-current md:h-8 md:w-8"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
            >
              <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
            </svg>{" "}
            Recent Topics
          </a>
        ) : (
          <div />
        )
      }
      {
        page.url.next ? (
          <a href={page.url.next} class="btn btn-ghost my-10 mx-5">
            More Topics{" "}
            <svg
              class="h-6 w-6 fill-current md:h-8 md:w-8"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
            >
              {" "}
              <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
            </svg>
          </a>
        ) : (
          <div />
        )
      }
    </div>
  </div>
</BaseLayout>
